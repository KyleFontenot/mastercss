{
    "yaml.format.singleQuote": true,
    "javascript.format.semicolons": "remove",
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "runItOn": {
        "commands": [
            {
                "match": "master\\.css\\..*$",
                "isShellCommand": false,
                "cmd": "eslint.restart"
            }
        ]
    }
}
