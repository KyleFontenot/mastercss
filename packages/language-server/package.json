{
    "name": "@master/css-language-server",
    "type": "module",
    "scripts": {
        "build": "techor build \"src/**/*.ts\"",
        "dev": "pnpm build --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint",
        "test": "vitest"
    },
    "description": "Master CSS Language Server",
    "author": "Aoyue Design LLC.",
    "license": "MIT",
    "repository": {
