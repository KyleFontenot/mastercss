{
    "name": "@master/css.vue",
    "scripts": {
        "build:main": "vite build",
        "build:type": "vue-tsc --declaration --emitDeclarationOnly",
        "build": "pnpm run build:main && pnpm run build:type",
        "dev": "pnpm run build:main --watch",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint src",
        "test": "jest"
    },
    "license": "MIT",
    "description": "Integrate Master CSS in Vue way",
    "author": "Aoyue Design LLC.",
    "funding": "https://css.master.co/docs/donate",
    "homepage": "https://css.master.co",
    "bugs": {
        "url": "https://github.com/master-co/css/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/vue"
    },
    "keywords": [
        "styled",
        "component",
        "element",
        "styled-component",
        "vue",
        "hooks",
        "use",
        "css",
        "mastercss",
        "class-name",
        "vuejs",
        "nuxtjs"
    ],
    "sideEffects": false,
    "main": "./dist/index.js",
    "jsnext:main": "./dist/index.mjs",
    "esnext": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        },
        "./CSSRuntimeProvider": {
            "require": "./dist/CSSRuntimeProvider.js",
            "import": "./dist/CSSRuntimeProvider.mjs",
            "types": "./dist/CSSRuntimeProvider.d.ts"
        },
        "./ThemeServiceProvider": {
            "require": "./dist/ThemeServiceProvider.js",
            "import": "./dist/ThemeServiceProvider.mjs",
            "types": "./dist/ThemeServiceProvider.d.ts"
        },
        "./styled": {
            "require": "./dist/styled.js",
            "import": "./dist/styled.mjs",
            "types": "./dist/styled.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            ".": [
                "./dist/index.d.ts"
            ],
            "CSSRuntimeProvider": [
                "./dist/CSSRuntimeProvider.d.ts"
            ],
            "ThemeServiceProvider": [
                "./dist/ThemeServiceProvider.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "vue": ">= 3.0.0"
    },
    "dependencies": {
        "@master/css-runtime": "workspace:^",
        "@techor/one-liner": "^2.2.10",
        "class-variant": "workspace:^",
        "theme-service": "workspace:^",
        "@techor/extend": "^2.5.4"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.2.3",
        "@vue/server-renderer": "^3.3.4",
        "@vue/test-utils": "^2.4.1",
        "@vue/tsconfig": "^0.4.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vue-tsc": "^1.8.4"
    }
}