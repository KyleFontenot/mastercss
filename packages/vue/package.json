{
    "name": "@master/css.vue",
    "type": "module",
    "scripts": {
        "build:main": "vite build",
        "build:type": "vue-tsc --declaration --emitDeclarationOnly --project tsconfig.prod.json",
        "build": "pnpm run \"/^build:/\"",
        "dev": "pnpm run build:main --watch",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint",
        "e2e": "playwright test -c e2e/playwright-ct.config.ts"
    },
    "license": "MIT",
    "description": "Integrate Master CSS in Vue way",
    "author": "Aoyue Design LLC.",
    "funding": "https://rc.css.master.co/sponsor",
    "homepage": "https://css.master.co",
    "bugs": {
        "url": "https://github.com/master-co/css/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/vue"
    },
    "keywords": [
        "component",
        "element",
        "vue",
        "hooks",
        "use",
        "css",
        "mastercss",
        "class-name",
        "vuejs",
        "nuxtjs"
    ],
    "sideEffects": false,
    "main": "./dist/index.cjs",
    "jsnext:main": "./dist/index.js",
    "esnext": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "peerDependencies": {
        "vue": ">= 3.0.0"
    },
    "dependencies": {
        "@master/css-runtime": "workspace:^",
        "@techor/extend": "^3.1.7"
    },
    "devDependencies": {
        "@playwright/experimental-ct-vue": "1.41.2",
        "@playwright/test": "1.41.2",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vue/eslint-config-typescript": "^14.1.4",
        "@vue/server-renderer": "^3.5.13",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint-plugin-vue": "^9.32.0",
        "shared": "workspace:^",
        "typescript": "5.6.2",
        "vite": "^6.0.2",
        "vue-tsc": "^2.1.10"
    }
}