{
    "name": "@master/eslint-plugin-css",
    "type": "module",
    "scripts": {
        "build": "rm -rf ./dist && pnpm run \"/^build:.*/\"",
        "build:main": "techor build \"src/**/*.ts\" --no-clean",
        "build:worker": "techor build \"src/**/*.worker.js\" --formats cjs --no-clean",
        "dev": "pnpm build --watch",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "keywords": [
        "mastercss",
        "eslint",
        "eslintplugin"
    ],
    "license": "MIT",
    "description": "Master CSS ESLint Plugin",
    "author": "Aoyue Design LLC.",
    "funding": "https://css.master.co/docs/donate",
    "homepage": "https://css.master.co",
    "bugs": {
        "url": "https://github.com/master-co/css/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/eslint-plugin"
    },
    "sideEffects": false,
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "jsnext:main": "./dist/index.mjs",
    "esnext": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "dependencies": {
        "@master/css": "workspace:^",
        "@master/css-validator": "workspace:^",
        "explore-config": "^3.0.15",
        "synckit": "^0.9.0",
        "@typescript-eslint/utils": "^7.0.2",
        "typescript-eslint": "^7.0.2"
    },
    "devDependencies": {
        "@angular-eslint/template-parser": "^16.3.1",
        "@types/node": "^20.11.20",
        "@typescript-eslint/rule-tester": "^7.0.2",
        "eslint": "^8.57.0",
        "eslint-plugin-markdown": "^3.0.1",
        "eslint-plugin-mdx": "^2.3.4",
        "svelte-eslint-parser": "^0.33.1",
        "ts-node": "^10.9.2",
        "vue-eslint-parser": "^9.4.2"
    }
}