{
    "name": "master-css-vscode",
    "type": "module",
    "scripts": {
        "build": "techor build",
        "dev": "pnpm build --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src",
        "publish": "mv ../../package.json ../../_package.json && pnpm dlx @vscode/vsce publish && mv ../../_package.json ../../package.json"
    },
    "description": "Master CSS for Visual Studio Code",
    "displayName": "Master CSS",
    "author": "Aoyue Design LLC.",
    "funding": "https://css.master.co/docs/donate",
    "homepage": "https://rc.css.master.co/docs/installation/language-service",
    "license": "MIT",
    "publisher": "masterco",
    "version": "2.1.36",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git",
        "directory": "packages/vscode"
    },
    "engines": {
        "vscode": "^1.86.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.min.cjs",
    "exports": {
        ".": "./dist/extension.min.cjs",
        "./server": "./dist/server.min.cjs"
    },
    "files": [
        "dist"
    ],
    "contributes": {
        "languages": [
            {
                "id": "master-css",
                "aliases": [
                    "master-css",
                    "mastercss"
                ],
                "extensions": [
                    ".mastercss"
                ]
            }
        ],
        "grammars": [
            {
                "language": "master-css",
                "scopeName": "source.master-css",
                "path": "./syntaxes/master-css.tmLanguage.json"
            },
            {
                "scopeName": "source.master-css.injection-class",
                "path": "./syntaxes/master-css.injection-class.tmLanguage.json",
                "injectTo": [
                    "source",
                    "text"
                ]
            },
            {
                "scopeName": "source.master-css.injection-react",
                "path": "./syntaxes/master-css.injection-react.tmLanguage.json",
                "injectTo": [
                    "source.js.jsx",
                    "source.ts.tsx",
                    "source.mdx",
                    "source.jsx",
                    "source.tsx"
                ]
            },
            {
                "scopeName": "source.master-css.injection-vue",
                "path": "./syntaxes/master-css.injection-vue.tmLanguage.json",
                "injectTo": [
                    "source.vue"
                ]
            },
            {
                "scopeName": "source.master-css.injection-js",
                "path": "./syntaxes/master-css.injection-js.tmLanguage.json",
                "injectTo": [
                    "source.js.jsx",
                    "source.ts.tsx",
                    "source.mdx",
                    "source.jsx",
                    "source.tsx",
                    "source.js",
                    "source.ts",
                    "source.svelte",
                    "source.vue"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.master-css.class": "master-css"
                }
            },
            {
                "scopeName": "source.master-css.injection-string",
                "path": "./syntaxes/master-css.injection-string.tmLanguage.json",
                "injectTo": [
                    "source.js.jsx",
                    "source.ts.tsx",
                    "source.mdx",
                    "source.jsx",
                    "source.tsx",
                    "source.js",
                    "source.ts",
                    "source.svelte",
                    "source.vue"
                ]
            }
        ],
        "configuration": {
            "title": "Master CSS",
            "properties": {
                "masterCSS.includedLanguages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "html",
                        "php",
                        "javascript",
                        "typescript",
                        "javascriptreact",
                        "typescriptreact",
                        "vue",
                        "svelte",
                        "rust",
                        "astro",
                        "markdown",
                        "mdx",
                        "astro"
                    ]
                },
                "masterCSS.exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/.git/**",
                        "**/node_modules/**",
                        "**/.hg/**"
                    ],
                    "description": "Configure glob patterns to exclude from all Master Language Service features."
                },
                "masterCSS.classStrings": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ["\\sclass=", "\"", "\""],
                        ["\\sclass=", "'", "'"],
                        ["\\sclassName=", "\"", "\""],
                        ["\\sclassName=", "'", "'"],
                        ["\\sstyled(?:\\s+)?(?:\\.\\w+)?", "`", "`"],
                        ["\\sstyles(?:\\s+)?(?::|=)(?:\\s+)?", "\"", "\""],
                        ["\\sstyles(?:\\s+)?(?::|=)(?:\\s+)?", "'", "'"],
                        ["\\sstyles(?:\\s+)?(?::|=)(?:\\s+)?", "`", "`"]
                    ]
                },
                "masterCSS.classAssignments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ["\\sclassName=", "{", "}"],
                        ["\\sclass=", "{", "}"],
                        ["\\sclass:list=", "{", "}"],
                        ["\\sstyles(?:\\s+)?(?::|=)(?:\\s+)?", "{", "}"],
                        ["\\s:class=", "\"", "\""],
                        ["\\sv-bind:class=", "\"", "\""],
                        ["\\s[class]=", "\"", "\""],
                        ["\\s[className]=", "\"", "\""],
                        ["\\s[ngClass]=", "\"", "\""],
                        ["\\sclsx", "(", ")"],
                        ["\\scva", "(", ")"],
                        ["\\.class", "(", ")"],
                        ["\\sstyled(?:\\s+)?(?:\\.\\w+)?", "(", ")"],
                        ["\\.classList(?:\\s+)?(?:\\.(add|remove|toggle|replace))", "(", ")"]
                    ]
                },
                "masterCSS.suggestSyntax": {
                    "type": "boolean",
                    "default": true
                },
                "masterCSS.inspectSyntax": {
                    "type": "boolean",
                    "default": true
                },
                "masterCSS.renderSyntaxColors": {
                    "type": "boolean",
                    "default": true
                },
                "masterCSS.config": {
                    "type": "string",
                    "default": "master.css"
                }
            }
        }
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "devDependencies": {
        "@master/css-shared": "workspace:^",
        "@master/css-language-server": "workspace:^",
        "@vscode/vsce": "^2.24.0",
        "vscode-languageclient": "^7.0.0"
    }
}