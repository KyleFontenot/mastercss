        "monaco-editor": "^0.45.0",
        "monaco-editor-textmate": "^4.0.0",
        "monaco-textmate": "^3.0.1",
        "theme-mode": "^1.1.1",
        "uvcanvas": "^0.2.1"
    },
    "devDependencies": {
        "@next/mdx": "^14.2.4",
        "@types/node": "^20.14.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "eslint": "^8.57.0",
        "eslint-config-next": "^14.2.4",
        "internal": "workspace:^",
        "next": "^14.2.4",
        "react": "^18",
        "react-dom": "^18",
        "tsx": "^4.15.5",
        "typescript": "^5.4.5"
    }
